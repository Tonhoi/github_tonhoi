<div class="pages__news-blog">
    <div class="grid wide">
        <div class="row">
            <div class="col l-3">
                <div class="Reaction_wrapper-container hide-on-tablet-mobile">
                <h1>{{blogUser.username}}</h1>
                    <div class="Reaction_wrapper">
                        <div class="Reaction_btnReact">
                            <i class="Reaction_btnReact-icon far fa-heart"></i>
                            <span>0</span>
                        </div>
                        

                        <label for="checkComment" class="Reaction_btnReact">
                            <i class="Reaction_btnReact-icon far fa-comment"></i>
                            <span>0</span>
                        </label>
                    </div>
                </div>
            </div>

            <div class="col l-7">
                <h1 class="news-blog__heading">{{blogUser.tittle}}</h1>
                <div class="overlay__option"></div>
                <div class="question__content-title news-blog__question-content-title">
                    <div class="postItem__header news-blog__postItem-header">
                        <div class="postItem__author">
                            <div>
                                <img src="https://fullstack.edu.vn/assets/images/nobody_m.256x256.jpg" alt="" class="postItem__author-img news-blog__postItem__author-img">
                            </div>
                            <div>
                                <span class="news-blog__postItem-span">{{blogUser.username}}</span>
                                <div class="news-blog__span">
                                    <span>1 giờ trước</span>
                                    <span>.</span>
                                    <span>3 phút đọc</span>
                                </div>
                            </div>
                        </div>
                        <div class="postItem__optionBtn"> 
                            <i class="icon__ellipsis fas fa-ellipsis-h"></i>
                            <div class="postItem__optionBtn-function">
                                <ul class="tippy__wrapper-list">
                                    <li>
                                        <i class="fab fa-facebook">
                                            <span>Chia sẻ lên facebook</span>
                                        </i>
                                    </li>
                                    <li>
                                        <i class="fab fa-twitter">
                                            <span>chia sẻ lên Twitter</span>
                                        </i>
                                    </li>
                                    <li>
                                        <i class="fas fa-envelope">
                                            <span>Email</span>
                                        </i>
                                    </li>
                                    <li>
                                        <i class="fas fa-link">
                                            <span>Sao chép liên kết</span>
                                        </i>
                                    </li>
                                    <li>
                                        <i class="fas fa-flag">
                                            <span>Báo cáo bài viết</span>
                                        </i>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="content-blogs">
                        <p>{{{blogUser.description}}}</p>
                    </div>
                    <div class="Reaction_wrapper">
                        <div class="Reaction_btnReact">
                            <i class="Reaction_btnReact-icon far fa-heart"></i>
                            <span>0</span>
                        </div>
                        

                        <label for="checkComment" class="Reaction_btnReact">
                            <i class="Reaction_btnReact-icon far fa-comment"></i>
                            <span>0</span>
                        </label>
                    </div>
                </div>
                <input type="checkbox" id="checkComment" class="checkk" hidden/>
                <label for="checkComment" class="overlay js-overlay"></label>
                <div class="BlogDetail_commentBody full-width-on-tablet-mobile">
                    <div class="os-content">
                        <label for="checkComment" class="btn-close btn-clos__comments fas fa-times"></label>
                        <div class="Comment_blog-tittle">
                            <div class="Comment_contentHeading">Chưa có bình luận</div>
                            <div class="Comment_blog-tittle-body">
                                <div class="CommentBox_commentWrapper">
                                    <img src="/img/anh.png" alt="" class="postItem__author-img news-blog__postItem__author-img">
                                </div>
                                <div class="Comment_blog-tittle-input">
                                    <textarea id="w3review" name="w3review"  placeholder="Viết bình luận của bạn..."></textarea>
                                </div>
                            </div>

                            {{!-- change backgound of CommentBox_ok: CommentBox_ok--onchange --}}
