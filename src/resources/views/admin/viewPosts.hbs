
<div class="content">
    <div class="form__user-common handleSlide-user">
        <div class="form-user">

            <div class="form-check">
                <input type="checkbox" class="form-check-checkbox">
                <label class="form-check-label">
                    Chọn tất cả
                </label>
            </div>
            <table>
                <thead>
                    <tr>
                        <th>#</th>
                        <th style="width: 15%;">Ảnh</th>
                        <th style="width: 40%;">Tên</th>
                        <th style="width: 14%;">Miêu tả</th>
                        <th style="width: 20%;">chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each slideshow}}
                    <tr>
                        <th scope="row">
                            <input type="checkbox" name="" id="" class="checkbox">
                            {{sum @index 1}}
                        </th>
                        <th><img src="{{this.image}}"style="width: 50px; height: 50px; border-radius:12px;"></th>
                        <th>{{this.name}}</th>
                        <th><a href="/homeAdmin/{{this.slug}}">Xem chi tiết</a></th>
                        <th>
                            <div style="display: grid; grid-template-columns: 1fr 1fr;padding: 0 12px; grid-column-gap: 12px; grid-row-gap: 8px;">
                                <a href="/homeAdmin/{{this._id}}/edit" class="btn btn-update-viewPosts">
                                    <i class="fas fa-edit"></i>
                                    <span>sửa</span>
                                </a>
                                <form action="/homeAdmin/{{this._id}}?_method=DELETE" method="post">
                                    <button class="btn btn-delete-viewPosts">
                                        <i class="far fa-trash-alt"></i>
                                        <span>Xóa</span>
                                    </button>
                                </form>
                            </div>
                        </th>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

