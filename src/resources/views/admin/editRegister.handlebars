<div class="content">
    <div class="form__user-common handleSlide-user">
        <div class="form-user">
            <form action="/homeAdmin/{{loginRegister._id}}?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="">Họ và tên</label>
                    <input type="text" value="{{loginRegister.fullname}}" name="fullname" placeholder="Họ và tên" class="form-control">
                </div>
                <div class="form-group">
                    <label for="">Tên tài khoản</label>
                    <input type="text" value="{{loginRegister.username}}" name="username" placeholder="Tên tài khoản" class="form-control">
                </div>

                <div class="form-group">
                    <label for="">Mật khẩu</label>
                    <textarea name="password" placeholder="Mật khẩu" class="form-control">{{loginRegister.password}}</textarea>
                </div>

                <div class="form-group">
                    <label for="">role</label>
                    <textarea name="role" placeholder="role" class="form-control">{{loginRegister.role}}</textarea>
                </div>
                <button type="submit" class="btn">Lưu lại</button>
            </form>
        </div>
    </div>
</div>