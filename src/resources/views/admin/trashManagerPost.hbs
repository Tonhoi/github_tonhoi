
<div class="content">
    <div class="form__user-common">
        <div class="form-user">
            <div style="margin-bottom: 10px;" class="form-user__heading">
                <a href="/homeAdmin/managerPost">Danh sách bài viết</a>
                <h1>Bài viết đã xóa</h1>
            </div>
            <table>
                <thead>
                    <tr>
                        <th style="width: 10%;">#</th>
                        <th style="width: 15%;">Ảnh</th>
                        <th style="width: 30%;">Họ và tên</th>
                        <th>chức năng</th>
                    </tr>
                </thead>
                <tbody>
                {{#each blogUser}}
                <tr>
                    <th>{{sum @index 1}}</th>
                    <th><img src="{{this.image}}" alt="" style="width: 50px; height: 50px; border-radius:12px;"></th>
                    <th>{{this.username}}</th>
                    <th>
                        <div style="display: grid; grid-template-columns: 1fr 1fr 1fr;padding: 0 12px; grid-column-gap: 12px; grid-row-gap: 8px;">
                            <a href="/homeAdmin/user/blog/{{this.slug}}" class="btn-view btn">
                                <i class="fas fa-edit"></i>
                                <span>xem</span>
                            </a>
                            <form action="/homeAdmin/{{this._id}}/restore?_method=PATCH" method="post">
                                <button class="btn btn-update" style="min-width: 150px; border-radius: 8px;">
                                    <i class="far fa-trash-alt"></i>
                                    <span>Khôi phục</span>
                                </button>
                            </form>
                            
                            <form action="/homeAdmin/{{this._id}}/force?_method=DELETE" method="post" style="position: relative; top: 3px">
                                <button class="btn btn-delete" style="min-width: 150px; border-radius: 8px;">
                                    <i class="far fa-trash-alt"></i>
                                    <span>Xóa vĩnh viễn</span>
                                </button>
                            </form>
                        </div>
                    </th>
                </tr>
                {{else}}
                 <tr>
                    <th colspan="5" style="border-bottom: 1px solid #fff;">
                        chưa có bài viết nào.
                    </th>
                </tr>
                {{/each}}
            </tbody>
            </table>
        </div>
    </div>
</div>

